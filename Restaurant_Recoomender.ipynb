import streamlit as st
from openai import OpenAI
import os
from dotenv import load_dotenv

# Load API key
load_dotenv()
client = OpenAI(api_key=os.getenv("OPENAI_API_KEY"))

# Page config
st.set_page_config(page_title="GenAI Restaurant Recommender", page_icon="üçΩÔ∏è")
st.title(" GenAI-Powered Restaurant Recommender")
st.write("Find the perfect restaurant using **Generative AI**")

# User inputs
location = st.text_input("City / Location", "Pune")
cuisine = st.text_input("Preferred Cuisine", "Italian")
diet = st.selectbox("Dietary Preference", ["None", "Vegetarian", "Vegan", "Jain", "Gluten-Free"])
occasion = st.selectbox("Occasion", ["Casual", "Family Dinner", "Date Night", "Business Meeting"])
budget = st.selectbox("Budget", ["Low", "Medium", "High"])

if st.button("Get Restaurant Recommendations"):
    with st.spinner("Generating personalized recommendations..."):
        
        prompt = f"""
        You are an expert restaurant recommendation assistant.

        User Details:
        Location: {location}
        Cuisine Preference: {cuisine}
        Dietary Requirement: {diet}
        Occasion: {occasion}
        Budget Level: {budget}

        Generate:
        - 3 restaurant recommendations
        - Short description for each
        - Why it suits the user's preferences
        - Mention ambience and pricing level

        Keep responses friendly and concise.
        """

        response = client.chat.completions.create(
            model="gpt-4o-mini",
            messages=[
                {"role": "system", "content": "You are a helpful restaurant recommendation assistant."},
                {"role": "user", "content": prompt}
            ],
            temperature=0.7
        )

        st.subheader(" AI-Recommended Restaurants")
        st.write(response.choices[0].message.content)
